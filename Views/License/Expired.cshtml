@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["LicenseExpired"];
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @Localizer["LicenseExpired"]
                    </h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-key fa-5x text-danger mb-3"></i>
                        <h4 class="text-danger">@Localizer["LicenseExpiredTitle"]</h4>
                        <p class="lead">@Localizer["LicenseExpiredMessage"]</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card border-warning">
                                <div class="card-body">
                                    <h5 class="card-title text-warning">
                                        <i class="fas fa-shopping-cart me-2"></i>
                                        @Localizer["PurchaseNewLicense"]
                                    </h5>
                                    <p class="card-text">@Localizer["PurchaseNewLicenseDescription"]</p>
                                    <a href="@Url.Action("Purchase")" class="btn btn-success btn-lg" target="_blank">
                                        <i class="fas fa-external-link-alt me-2"></i>
                                        @Localizer["PurchaseNow"]
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="card border-info">
                                <div class="card-body">
                                    <h5 class="card-title text-info">
                                        <i class="fas fa-key me-2"></i>
                                        @Localizer["ActivateExistingLicense"]
                                    </h5>
                                    <p class="card-text">@Localizer["ActivateExistingLicenseDescription"]</p>
                                    <a href="@Url.Action("Index")" class="btn btn-primary btn-lg">
                                        <i class="fas fa-key me-2"></i>
                                        @Localizer["ActivateLicense"]
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h5>@Localizer["NeedHelp"]</h5>
                        <p>@Localizer["ContactSupport"]</p>
                        <a href="mailto:support@akkistech.com" class="btn btn-outline-primary">
                            <i class="fas fa-envelope me-2"></i>
                            support@akkistech.com
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
