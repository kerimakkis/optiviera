@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Optiviera ERP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="icon" href="~/favicon.png" type="image/png" />
    <link rel="shortcut icon" href="~/favicon.png" type="image/png" />
    <link rel="apple-touch-icon" href="~/favicon.png" type="image/png" />
    <link rel="icon" sizes="32x32" href="~/favicon.png" type="image/png" />
    <link rel="icon" sizes="16x16" href="~/favicon.png" type="image/png" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/OptivieraLogo.png" alt="Optiviera" height="70" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if(User.IsInRole("Admin")){
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="UserRoles" asp-action="ManageUserRoles">@Localizer["Users"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tickets" asp-action="Index">@Localizer["Tickets"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Reports" asp-action="Index">@Localizer["Reports"]</a>
                        </li>
                        }
                        else if(User.IsInRole("Manager")){
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tickets" asp-action="Index">@Localizer["Tickets"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Reports" asp-action="Index">@Localizer["Reports"]</a>
                        </li>
                        }
                        else if (User.IsInRole("Employee")){
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tickets" asp-action="MyTickets">@Localizer["Tickets"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Reports" asp-action="Index">@Localizer["Reports"]</a>
                        </li>
                        }
                    </ul>
                    <div class="d-flex align-items-center">
                        @await Component.InvokeAsync("LanguageSwitcher")
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- License Warning (temporarily disabled) -->
    <!-- <partial name="_LicenseWarning" /> -->

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="card-footer text-white mt-auto" style="background-color: var(--optiviera-navy) !important;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 - <a href="@Url.Action("Info", "License")" class="text-warning text-decoration-none fw-bold" style="text-shadow: 0 0 5px rgba(255, 193, 7, 0.5);" title="@Localizer["ClickForLicenseInfo"]">Optiviera</a> - @Localizer["FooterDescription"]</p>
                </div>
                <div class="col-md-6 text-end">
                    <a href="https://akkistech.com" target="_blank" class="text-white text-decoration-none d-flex align-items-center justify-content-end">
                        <span class="me-2">@Localizer["LicensedBy"]</span>
                        <img src="~/images/AkkisTechlogo512.png" alt="AkkisTech" height="60" class="me-2" style="vertical-align: middle;" />
                        <span>@Localizer["AkkisTech"]</span>
                    </a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    <!-- Initial Loading Overlay -->
    <div id="initial-loading" class="optiviera-loading">
        <div class="optiviera-loading-content">
            <div class="optiviera-spinner"></div>
        </div>
    </div>
    
    <script>
        // Hide initial loading when page is fully loaded
        window.addEventListener('load', function() {
            const initialLoading = document.getElementById('initial-loading');
            if (initialLoading) {
                initialLoading.classList.add('hidden');
                setTimeout(() => {
                    initialLoading.remove();
                }, 500);
            }
        });
    </script>
</body>
</html>
