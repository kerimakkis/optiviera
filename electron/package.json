{
  "name": "optiviera-desktop",
  "version": "1.0.0",
  "description": "Optiviera ERP Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:macIntel": "electron-builder --mac --x64",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "optiviera",
    "erp",
    "desktop",
    "electron"
  ],
  "author": {
    "name": "AkkisTech",
    "email": "info@akkistech.com"
  },
  "homepage": "https://akkistech.com/optiviera",
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^23.0.0"
  },
  "build": {
    "appId": "com.akkistech.optiviera",
    "productName": "Optiviera ERP",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "../Optiviera/bin/Release/net6.0/publish/",
        "to": "app/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        }
      ],
      "icon": "icon.icns",
      "category": "public.app-category.business",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icon.png",
      "category": "Office",
      "maintainer": "AkkisTech <info@akkistech.com>"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Optiviera ERP"
    }
  }
}
