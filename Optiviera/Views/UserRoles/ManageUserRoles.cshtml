@model IEnumerable<Optiviera.Models.ViewModels.ManageUserRolesViewModel>
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["UserManagement"];
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary"><i class="fas fa-users"></i> @Localizer["UserManagement"]</h2>
                <div>
                    <a asp-controller="UserRoles" asp-action="CreateUser" class="btn btn-success me-2">
                        <i class="fas fa-user-plus"></i> @Localizer["AddNewUser"]
                    </a>
                    <a asp-controller="Admin" asp-action="CreateRole" class="btn btn-primary">
                        <i class="fas fa-plus"></i> @Localizer["CreateNewRole"]
                    </a>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row">
                @foreach (var member in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-header bg-primary text-white">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-user"></i> @member.User.FullName
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="card-text">
                                    <strong>@Localizer["Email"]:</strong> @member.User.Email<br>
                                    <strong>@Localizer["CurrentRoles"]:</strong> 
                                    @{
                                        var userRoles = member.SelectedRoles?.ToList() ?? new List<string>();
                                        if (userRoles.Any())
                                        {
                                            <span class="badge bg-info">@string.Join(", ", userRoles)</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">@Localizer["NoRoleAssigned"]</span>
                                        }
                                    }
                                </p>
                                
                                <form asp-action="ManageUserRoles" asp-controller="UserRoles" method="post">
                                    <input type="hidden" asp-for="@member.User.Id"/>
                                    <div class="mb-3">
                                        <label asp-for="@member.Roles" class="form-label">@Localizer["ChangeRole"]:</label>
                                        <select asp-for="@member.SelectedRoles" class="form-select" asp-items="@member.Roles">
                                            <option value="">@Localizer["SelectRole"]</option>
                                        </select>
                                    </div>
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                        <button type="submit" class="btn btn-warning btn-sm me-2">
                                            <i class="fas fa-edit"></i> @Localizer["ChangeRole"]
                                        </button>
                                        <a asp-controller="UserRoles" asp-action="EditUser" asp-route-id="@member.User.Id" class="btn btn-info btn-sm me-2">
                                            <i class="fas fa-edit"></i> @Localizer["Edit"]
                                        </a>
                                        <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete('@member.User.Id', '@member.User.FullName')">
                                            <i class="fas fa-trash"></i> @Localizer["Delete"]
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Localizer["DeleteUser"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p id="deleteMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete(userId, userName) {
    document.getElementById('deleteMessage').textContent = 
        '@Localizer["DeleteConfirmation", "' + userName + '"]';
    document.getElementById('deleteForm').action = '@Url.Action("DeleteUser", "UserRoles")/' + userId;
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
}
</script>
