@inject SignInManager<WaveUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column">
    <li class="nav-item"><a class="nav-link @(ViewContext.ViewData["ActivePage"]?.ToString() == "Index" ? "active" : "")" id="profile" asp-page="./Index">Profile</a></li>
    <li class="nav-item"><a class="nav-link @(ViewContext.ViewData["ActivePage"]?.ToString() == "Email" ? "active" : "")" id="email" asp-page="./Email">Email</a></li>
    <li class="nav-item"><a class="nav-link @(ViewContext.ViewData["ActivePage"]?.ToString() == "ChangePassword" ? "active" : "")" id="change-password" asp-page="./ChangePassword">Password</a></li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item"><a id="external-login" class="nav-link @(ViewContext.ViewData["ActivePage"]?.ToString() == "ExternalLogins" ? "active" : "")" asp-page="./ExternalLogins">External logins</a></li>
    }
    <li class="nav-item"><a class="nav-link @(ViewContext.ViewData["ActivePage"]?.ToString() == "TwoFactorAuthentication" ? "active" : "")" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>
    <li class="nav-item"><a class="nav-link @(ViewContext.ViewData["ActivePage"]?.ToString() == "PersonalData" ? "active" : "")" id="personal-data" asp-page="./PersonalData">Personal data</a></li>
</ul>
